        {
          "name": "Get Order by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{order_url}}/orders/{{order_id}}",
              "host": ["{{order_url}}"],
              "path": ["orders", "{{order_id}}"]
            },
            "description": "Get order by ID"
          },
          "response": []
