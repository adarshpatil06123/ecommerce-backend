  "variable": [
    {
      "key": "auth_url",
      "value": "http://localhost:8081",
      "type": "string"
    },
    {
      "key": "product_url",
      "value": "http://localhost:8082",
      "type": "string"
    },
    {
      "key": "order_url",
      "value": "http://localhost:8083",
      "type": "string"
    },
    {
      "key": "payment_url",
      "value": "http://localhost:8084",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "product_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "order_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "payment_id",
      "value": "",
