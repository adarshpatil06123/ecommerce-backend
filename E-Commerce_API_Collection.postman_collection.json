  "item": [
    {
      "name": "Auth Service",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.id) {",
                  "        pm.collectionVariables.set('user_id', jsonData.data.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"CUSTOMER\"\n}"
            },
            "url": {
              "raw": "{{auth_url}}/auth/register",
              "host": ["{{auth_url}}"],
              "path": ["auth", "register"]
            },
            "description": "Register a new user in the system"
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.token) {",
                  "        pm.collectionVariables.set('jwt_token', jsonData.data.token);",
                  "        pm.collectionVariables.set('user_id', jsonData.data.userId);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{auth_url}}/auth/login",
              "host": ["{{auth_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login and receive JWT token"
          },
          "response": []
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{auth_url}}/auth/users/{{user_id}}",
              "host": ["{{auth_url}}"],
              "path": ["auth", "users", "{{user_id}}"]
            },
            "description": "Get user details by ID"
          },
          "response": []
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{auth_url}}/auth/users",
              "host": ["{{auth_url}}"],
              "path": ["auth", "users"]
            },
            "description": "Get all registered users"
          },
          "response": []
        },
        {
          "name": "Validate Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{auth_url}}/auth/validate",
              "host": ["{{auth_url}}"],
              "path": ["auth", "validate"]
            },
            "description": "Validate JWT token"
          },
          "response": []
        }
      ]
    },
