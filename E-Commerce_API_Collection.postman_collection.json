{
  "info": {
    "name": "E-Commerce Backend API",
    "description": "Complete API collection for E-Commerce microservices (Auth, Product, Order, Payment)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "ecommerce-backend-api",
