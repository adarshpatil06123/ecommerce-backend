              "raw": "{\n  \"name\": \"Gaming Laptop Pro\",\n  \"description\": \"Ultra high-performance gaming laptop\",\n  \"price\": 1499.99,\n  \"stock\": 45,\n  \"imageUrl\": \"https://example.com/laptop-pro.jpg\"\n}"
